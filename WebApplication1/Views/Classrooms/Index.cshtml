@model IEnumerable<WebApplication1.UniversityModels.Classroom>

<h2>Classrooms</h2>

<table class="table">
    <tr>
        <th>Room Number</th>
        <th>Room Type</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RoomNumber</td>
            <td>@item.RoomType</td>
            <td>
                <a asp-action="Availability" asp-route-id="@item.ClassroomId">
                    View Availability
                </a>
            </td>
        </tr>
    }
</table>
