@model WebApplication1.UniversityModels.ResourceAllocation

<h2>Allocate Resource</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ResourceId"></label>
        <select asp-for="ResourceId" class="form-control" asp-items="ViewBag.ResourceId"></select>
    </div>
    <div class="form-group">
        <label asp-for="AllocatedToId"></label>
        <select asp-for="AllocatedToId" class="form-control" asp-items="ViewBag.AllocatedToId"></select>
    </div>
    <div class="form-group">
        <label asp-for="AllocationDate"></label>
        <input asp-for="AllocationDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Allocate</button>
</form>
