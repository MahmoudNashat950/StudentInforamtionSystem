@model WebApplication1.UniversityModels.RoomReservation
@using Microsoft.AspNetCore.Authorization
@inject Microsoft.AspNetCore.Identity.UserManager<WebApplication1.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create Room Reservation";
}

<h2>Create Room Reservation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ClassroomId"></label>
        <select asp-for="ClassroomId" class="form-control" asp-items="ViewBag.ClassroomId"></select>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Purpose"></label>
        <input asp-for="Purpose" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReservedBy"></label>
        <input asp-for="ReservedBy" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Reserve</button>
</form>
